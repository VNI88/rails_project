<header>
  <div>
    <nav>
      <ul>
        <% if logged_in? %>
          <li><%= link_to 'Consumidores', consumers_path %></li>
          <li>
            <ul>
              <li><%= link_to 'Perfil', current_consumer %></li>
              <li><%= link_to 'Configurações', '#' %></li>
              <li><%= link_to 'Sair', sign_out_path, method: :delete, data: {confirm: "Você tem certeza que deseja sair?"} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Acessar', root_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
